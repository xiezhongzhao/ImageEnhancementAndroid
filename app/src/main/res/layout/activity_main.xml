<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_java"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity"
android:orientation="vertical">

    <Button
        android:id="@+id/select_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="0px"
        android:layout_y="0px"
        android:text="Choose" />

    <Button
        android:id="@+id/gray_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="98dp"
        android:layout_y="0dp"
        android:text="Gray" />

    <Button
        android:id="@+id/sece_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="193dp"
        android:layout_y="0dp"
        android:text="SECE" />

    <Button
        android:id="@+id/baidu_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="295dp"
        android:layout_y="0dp"
        android:text="BaiDu" />

    <TextView
        android:id="@+id/time_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="6dp"
        android:layout_y="58dp"
        android:textSize="16dip"
        android:text="@string/time"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="398dp"
        android:layout_height="517dp"
        android:layout_x="7dp"
        android:layout_y="84dp"
        android:src="@drawable/ic_launcher_background" />

</AbsoluteLayout>






